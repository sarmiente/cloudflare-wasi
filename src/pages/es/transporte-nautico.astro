---
import Layout from "../../layouts/Layout.astro";
import NauticalModalCard from "../../components/modals/NauticalModalCard.astro";
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<Layout title={t("nautical.title")}>
    <section class="dark:bg-slate-800 bg-gray-50 lg:pt-24">
      <div class="mx-auto max-w-screen-xl px-4 py-32 lg:py-16">
        
        <!-- Título y detalles del post -->
        <div class="text-center mb-12">
          <h1
            class="text-2xl lg:text-4xl font-heading mb-4 text-gray-900 dark:text-white"
          >
          {t("nautical.title")}
          </h1>
          <p>
            Descubra la excelencia en Servicios de Transporte Náutico con nuestras opciones exclusivas:
          </p>
        </div>
  
    
  
            <NauticalModalCard />
      </div>
    </section>
  </Layout>