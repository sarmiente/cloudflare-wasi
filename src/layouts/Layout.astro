---

interface Props {
	title: string;
}
const { title } = Astro.props;

import "../../src/styles/global.css"
import Basehead from "../components/layout/BaseHead.astro";
import Navbar from "../components/ui/Navbar.astro";
import Footer from "../components/ui/Footer.astro";
import WhatsappButton from "../components/buttons/WhatsappButton.astro";
import TopButton from "../components/buttons/TopButton.astro";

import { getLangFromUrl } from "../i18n/utils"
import Cookies from "../components/cookies/Cookies.astro";

const lang = getLangFromUrl(Astro.url);

---

<!doctype html>
<html lang={lang}>
	<head>
		<Basehead title={title} />
		
	</head>
	<body>
		<Navbar />
		<slot />
    <WhatsappButton />
    <TopButton />
    <Cookies />
		<Footer />
	</body>
</html>

<script is:inline>
  // Disable right click
  document.addEventListener('contextmenu', (e) => e.preventDefault());

  // Disable keyboard shortcuts
  document.addEventListener('keydown', (e) => {
    // Prevent Ctrl+S, Ctrl+U, Ctrl+P, Ctrl+C, Ctrl+Shift+I
    if (
      (e.ctrlKey && e.key === 's') || 
      (e.ctrlKey && e.key === 'u') ||
      (e.ctrlKey && e.key === 'p') ||
      (e.ctrlKey && e.key === 'c') ||
      (e.ctrlKey && e.shiftKey && e.key === 'i')
    ) {
      e.preventDefault();
    }
  });

  // Disable text selection
  document.addEventListener('selectstart', (e) => e.preventDefault());

  // Disable drag and drop for images
  document.addEventListener('dragstart', (e) => e.preventDefault());

  // Disable copy
  document.addEventListener('copy', (e) => e.preventDefault());

  // Disable cut
  document.addEventListener('cut', (e) => e.preventDefault());

  // Disable paste
  document.addEventListener('paste', (e) => e.preventDefault());
</script>


<style is:global>
    /* Estilo para el scrollbar global */
    html {
      scroll-behavior: smooth;
      scrollbar-width: thin; /* Firefox */
      scrollbar-color: #60C11C #F3F4F6; /* Colores en Firefox */
    }
  
    html::-webkit-scrollbar {
      width: 8px; /* Ancho de la barra */
      height: 8px; /* Alto para barras horizontales */
    }
  
    html::-webkit-scrollbar-track {
      background: #F3F4F6; /* Fondo del track */
    }
  
    html::-webkit-scrollbar-thumb {
      background-color: #60C11C; /* Color del thumb */
      border-radius: 4px; /* Bordes redondeados */
      border: 2px solid #F3F4F6; /* Margen interno para que el thumb no ocupe todo */
    }
  
    html::-webkit-scrollbar-thumb:hover {
      background-color: #60C11C; /* Cambia el color al pasar el cursor */
    }
</style>

