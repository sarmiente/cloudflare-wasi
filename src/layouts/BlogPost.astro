---
// @ts-nocheck
import type { CollectionEntry } from 'astro:content';
import Layout from './Layout.astro';

import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);


type Props = CollectionEntry<'blog'>['data'];


const { title, heroImage, pubDate } = Astro.props;
---

<Layout title={title}>
  <section class="bg-gray-50 py-24">
    <div class="mx-auto max-w-screen-lg px-4 py-16">

      <div class="space-y-6 text-center">
        <p class="font-pattern font-medium capitalizr">{pubDate.toDateString()}</p>
        <h1 class="text-3xl lg:text-5xl font-heading mb-4 text-gray-900">{title}</h1>
        <a href="http://devs.sarpin.agency/" target="_blank">
          <div class="flex justify-center space-x-2.5 items-center">
            <img alt="Sarpin Agency" title="Sarpin Agency Logo" loading="lazy" width="30" height="30" decoding="async" data-nimg="1" class="rounded-full" src="/logofavicon_.svg">
            <span class="font-pattern text-sm">Sarpin Agency</span></div>
        </a>
      </div>
      <!-- Imagen destacada -->
      {heroImage && (
        <div class="py-5 flex justify-center items-center">
          <img
            src={heroImage}
            alt={title}
            class="rounded-lg w-2/3 max-w-full h-80 object-cover"
          />
        </div>
      )}


      <!-- Contenido del post -->
      <article class="prose prose-lg dark:prose-invert max-w-none mx-auto">
        <slot />
      </article>
    </div>
  </section>
  
</Layout>

			
