---
// Images
import { Image } from 'astro:assets';
import PicOne from "../../assets/milagros.png"
import PicTwo from "../../assets/beny.png"
import PicThree from "../../assets/grace.png"

import FrontOne from "../../assets/br_front_1.jpg"
import FrontTwo from "../../assets/br_front_2.jpg"
import FrontThree from "../../assets/br_front_3.jpg"

// Language imports
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---

<section class="bg-white pt-36 pb-32">
    <!-- Header de la secciÃ³n -->
    <div class="relative h-auto bg-gray-100 py-10">
      <div class="container px-6 mx-auto">
        <h1 class="text-sm font-pattern uppercase text-gray-600 text-center">{t("team.title")}</h1>
        <h2 class="mt-2 text-center text-2xl font-heading uppercase text-gray-900 sm:text-4xl">
          {t("team.desc")}
        </h2>
      </div>
    </div>
  
    <!-- Cards de los miembros del equipo -->
    <div class="container px-6 mx-auto ">
      <div class="grid grid-cols-1 gap-8 mt-8 xl:mt-16 md:grid-cols-2 xl:grid-cols-3">
        <!-- Card individual -->
        <div class="group flex flex-col items-center p-6 border border-gray-200 rounded-xl dark:border-gray-700 hover:shadow-lg transition-shadow duration-300">
          <div class="overflow-hidden rounded-xl aspect-square">
            <Image alt="" src={PicOne} />
            
          </div>
          <h1 class="mt-4 text-2xl font-heading text-gray-700 capitalize dark:text-white">Milagros Ortiz</h1>
          <p class="mt-2 font-pattern text-gray-500 capitalize dark:text-gray-300">
            {t("team.rep")}
          </p>
        </div>
  
        <!-- Card individual -->
        <div class="group flex flex-col items-center p-6 border border-gray-200 rounded-xl dark:border-gray-700 hover:shadow-lg transition-shadow duration-300">
          <div class="overflow-hidden rounded-xl aspect-square">
            <Image alt="" src={PicTwo} />
            
          </div>
          <h1 class="mt-4 text-2xl font-heading text-gray-700 capitalize dark:text-white">Beny Prada</h1>
          <p class="mt-2 font-pattern text-gray-500 capitalize dark:text-gray-300">CEO</p>
        </div>
  
        <!-- Card individual -->
        <div class="group flex flex-col items-center p-6 border border-gray-200 rounded-xl dark:border-gray-700 hover:shadow-lg transition-shadow duration-300">
          <div class="overflow-hidden rounded-xl aspect-square">
            <Image alt="" src={PicThree} />
            
          </div>
          <h1 class="mt-4 text-2xl font-heading text-gray-700 capitalize dark:text-white">Grace Garcia</h1>
          <p class="mt-2 text-gray-500 font-pattern capitalize dark:text-gray-300">{t("team.rep")}</p>
        </div>
      </div>
    </div>
  </section>


  <div class="mx-auto max-w-screen-xl px-4 py-8 sm:px-6 sm:py-12 lg:px-8">
    <div class="mx-auto max-w-3xl text-center">
      <span class="text-sm font-pattern uppercase block text-gray-600">{t("team.why")}</span>
      <h2 class="text-2xl mt-2 font-heading uppercase text-gray-900 sm:text-4xl lg:text-4xl">
        {t("team.why-des")}
      </h2>
    </div>
  
    <div class="grid grid-cols-1 gap-12 mt-16 lg:grid-cols-3 lg:gap-8">
      <div class="text-center">
      
       <Image alt="" src={FrontOne} 
       class="h-40 w-40 mx-auto rounded-full flex items-center justify-center shadow-lg"
       />
        
        <h3 class="mt-4 text-xl font-heading uppercase text-gray-900 sm:text-2xl">{t("team.var")}</h3>
        <p class="text-sm text-gray-700 mt-2">{t("team.var-des")}</p>
      </div>
  
      <div class="text-center">
       <Image alt="" src={FrontTwo} 
       class="h-40 w-40 mx-auto rounded-full flex items-center justify-center shadow-lg"
       />
        <h3 class="mt-4 text-xl font-heading uppercase text-gray-900 sm:text-2xl">{t("team.qa")}</h3>
        <p class="text-sm text-gray-700 mt-2">{t("team.qa-des")}</p>
      </div>
  
      <div class="text-center">
       <Image alt="" src={FrontThree} 
       class="h-40 w-40 mx-auto rounded-full flex items-center justify-center shadow-lg"
       />
        <h3 class="mt-4 text-xl font-heading uppercase text-gray-900 sm:text-2xl">{t("team.ps")}</h3>
        <p class="text-sm text-gray-700 mt-2">{t("team.ps-des")}</p>
      </div>
    </div>
   </div>
  