---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const features = [
  {
    title: t("proper.one"),
    text: t("one.desc"),
  },
  {
    title: t("proper.two"),
    text: t("two.desc"),
  },
  {
    title: t("proper.three"),
    text: t("three.desc"),
  },
  {
    title: t("proper.four"),
    text: t("four.desc"),
  },
];
---

<section class="bg-gray-100 py-20 lg:py-36">
  <div class="mx-auto max-w-screen-xl px-4 py-20 lg:py-16">
    <!-- Encabezado de secciÃ³n -->
    <div class="text-center mb-6 sm:mb-8">
      <p
        class="inline-block px-3 py-1 mb-4 text-xs font-medium tracking-wider uppercase font-pattern rounded-full bg-main"
      >
        {t("nav.services")}
      </p>
    </div>

    <div class="text-center max-w-3xl mx-auto mb-8 sm:mb-10">
      <h1
        class="text-2xl sm:text-3xl lg:text-4xl font-heading mb-3 sm:mb-4 text-gray-900"
      >
        {t("nav.manage")}
      </h1>

      <p class="font-pattern text-sm sm:text-base md:text-lg px-2">
        {t("manage.sub")}
      </p>
    </div>

    <div class="py-8">
      <img
        decoding="async"
        src="/aposentos_dos.svg"
        alt=""
        class="rounded-lg w-full object-cover h-64 md:h-96"
      />
    </div>

    <div
      class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-12"
    >
      <div class="flex flex-col mb-6 lg:justify-between lg:flex-row md:mb-8">
        <h2
          class="max-w-lg mb-5 font-sans text-3xl tracking-tight text-gray-900 sm:text-4xl sm:leading-none md:mb-6 group"
        >
          <span class="inline-block mb-1 sm:mb-4 font-heading">
            {t("manage.span")}
            <br class="hidden md:block" />

            {t("manage.br")}
          </span>
          <div
            class="h-1 ml-auto duration-300 origin-left transform bg-second scale-x-30 group-hover:scale-x-100"
          >
          </div>
        </h2>

        <p class="text-gray-800 font-pattern lg:max-w-lg">
          {t("manage.side")}
        </p>
      </div>

      <div
        class="grid gap-8 row-gap-5 mb-8 md:row-gap-8 lg:grid-cols-4 sm:grid-cols-2"
      >
        {
          features.map((item) => (
            <div class="duration-300 transform bg-white border-l-4 border-main hover:-translate-y-2">
              <div class="h-full p-5 border border-l-0 rounded-r shadow-sm">
                <h6 class="mb-2 leading-5 font-heading">{item.title}</h6>
                <p class="text-sm text-gray-900 font-pattern">{item.text}</p>
              </div>
            </div>
          ))
        }
      </div>
      <div class="py-5 text-center mb-6">
        <button
          type="button"
          class="uppercase bg-main p-2 text-center tracking-wide text-white font-display transition hover:bg-second focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black active:opacity-100 active:outline-offset-0 rounded-lg cursor-pointer"
        >
          <a
            href="https://api.whatsapp.com/send/?phone=573242016401&text=Hola%2C%20estoy%20interesado%20en%20sus%20servicios"
            target="_blank"
          >
            {t("book.now")}
          </a>
        </button>
      </div>
    </div>
  </div>
</section>
