---
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const translatePath = useTranslatedPath(lang);

const features = [
  {
    title: t("proper.one"),
    text: t("one.desc"),
  },
  {
    title: t("proper.two"),
    text: t("two.desc"),
  },
  {
    title: t("proper.three"),
    text: t("three.desc"),
  },
  {
    title: t("proper.four"),
    text: t("four.desc"),
  },
];

---


<section class="bg-gray-100 lg:pt-24">
    
    <div class="mx-auto max-w-screen-xl px-4 py-32 lg:py-16">
      <div class="text-center">
        <p
          class="inline-block px-3 py-1 mb-4 text-xs font-medium tracking-wider uppercase font-pattern rounded-full bg-main"
        >
          {t("nav.services")}
        </p>
      </div>

      <div class="text-center">
        <h1 class="text-2xl lg:text-4xl font-heading mb-4 text-gray-900">
          {t("manage.title")} 
        </h1>

        <p class="text-base text-gray-700 md:text-lg">
          {t("manage.sub")} 
        </p>
      </div>

      <div class="py-8">
        <img
          src="/br_front_1.jpg"
          alt=""
          class="rounded-lg w-full object-cover h-64 md:h-96"
        />
      </div>
     
         

      <div
        class="px-4 py-16 mx-auto sm:max-w-xl md:max-w-full lg:max-w-screen-xl md:px-24 lg:px-8 lg:py-12"
      >
        <div class="flex flex-col mb-6 lg:justify-between lg:flex-row md:mb-8">
          <h2
            class="max-w-lg mb-5 font-sans text-3xl tracking-tight text-gray-900 sm:text-4xl sm:leading-none md:mb-6 group"
          >
            <span class="inline-block mb-1 sm:mb-4 font-heading">
              {t("manage.span")}  <br class="hidden md:block" />

              {t("manage.br")} 
            </span>
            <div
              class="h-1 ml-auto duration-300 origin-left transform bg-second scale-x-30 group-hover:scale-x-100"
            >
            </div>
          </h2>
          
          <p class="text-gray-800 font-pattern lg:max-w-lg">
           
            {t("manage.side")} 
          </p>
          
        </div>

        
        <div
          class="grid gap-8 row-gap-5 mb-8 md:row-gap-8 lg:grid-cols-4 sm:grid-cols-2"
        >
        
          {
            features.map((item) => (
              <div class="duration-300 transform bg-white border-l-4 border-main hover:-translate-y-2">
                <div class="h-full p-5 border border-l-0 rounded-r shadow-sm">
                  <h6 class="mb-2 leading-5 font-heading">{item.title}</h6>
                  <p class="text-sm text-gray-900 font-pattern">{item.text}</p>
                </div>
              </div>
            ))
          }
        </div>
        <div class="py-5 text-center mb-6 ">
          <a href={translatePath("/contact/")} 
               class="inline-block bg-main hover:bg-second hover:text-white transition-colors uppercase px-8 py-3 text-sm rounded-md font-pattern">
              {t("nav.contact")}
            </a>
        </div>
      </div>
    </div>
  </section>